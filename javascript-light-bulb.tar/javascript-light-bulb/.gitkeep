
.container.on{
  background-color: beige;
  width:1000px;
  height:500px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container.off{
  background-color: black;
  width:1000px;
  height:500px;
  display: flex;
  justify-content: center;
  align-items: center;
}


.circle.on{
  border-radius: 50%;
  background-color: yellow;
  height: 200px;
  width:200px;
}

.circle.off{
  border-radius: 50%;
  background-color: rgb(81, 79, 79);
  height: 200px;
  width:200px;
}
